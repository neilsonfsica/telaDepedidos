{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*", "env.d.ts"],

  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vuetify"]
  }
}
